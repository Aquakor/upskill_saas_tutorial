<div class = "container">
  <h1>Contact Us</h1>
  
  <%= form_for "/contacts" do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br />
  
  <%= f.label :email %>
  <%= f.text_field :email %><br />
  
  <%= f.label :comments %>
  <%= f.text_area :comments %><br />
  
  <%= f.submit 'Submit' %>
  <% end %>
</div>